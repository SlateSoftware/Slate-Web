        "eslint-plugin-astro": "^1.5.0",
        "eslint-plugin-svelte": "^3.13.0",
        "prettier": "3.6.2",
        "prettier-plugin-astro": "0.14.1",
        "prettier-plugin-svelte": "3.4.0",
